
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/assets/js/jquery-3.6.3.slim.js"></script>


<title> </title>

<input type="hidden" id="Id" name="Id" />

<input type="hidden" id="PageGuid" value="@Context.Request.Query["Source"]" />


<div class="container mt-5">

    <!--begin::Card-->
    <div class="card card-custom">
        <div class="card-header">
            <div class="card-title">
                <span class="card-icon">
                    <i class="flaticon-notepad text-primary"></i>
                </span>
                <h3 class="card-label">All Roles</h3>
            </div>

            <div class="card-toolbar">
                <div class="btn-group">
                    <button type="button" id="btnAdd" class="btn btn-primary font-weight-bolder">
                        + Add Record
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <!--begin: Datatable-->
            <table class="table table-striped- table-bordered table-hover table-checkable " id="AttTable">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>

                    </tr>
                </thead>
            </table>

            <!--end: Datatable-->
        </div>
    </div>

</div>
<script>
    var rowdata;
    var Guid = $('#PageGuid').val();

    $(document).on('click', '#btnAdd', function () {


        window.location.href = '/Role/RolesMaster?Source=' + Guid;
    })


    var datatable;
    function generateTable() {

        datatable = $('#AttTable').DataTable({
            responsive: true,
            searching: true,
            ordering: false,
            // order: [[2, 'asc']],
            ordering: false,
            "ajax": {


                url: '/Users/GetAllUsers',
            },

            layout: {
                scroll: false, // enable/disable datatable scroll both horizontal and vertical when needed.
                // height: 450, // datatable's body's fixed height
                footer: false, // display/hide footer
            },

            // column sorting
            sortable: true,

            pagination: true,
            destroy: true,
            //   async: false,
            search: {
                input: $('#generalSearch'),
            },
            columns: [

                {
                    data: 'id', title: '#',

                }, {
                    data: 'name', title: 'Name'

                }, {
                    data: 'contactNumber', title: 'ContactNumber'

                }, {
                    data: 'email', title: 'Email'

                }, {
                    data: 'roleCode', title: 'Role'

                }, {
                    data: 'isActive', title: 'IsActive'

                },
                {
                    data: "guid", 'title': 'Action', render: function (data, type, row) {


                        if (row.isApproved == 0 && row.apprSeen == 0)
                            return `<div class="d-flex justify-content-center p-2"><span class="label label-lg label-light-success label-inline">Pending</span></div>`;
                        else if (row.isApproved == 0 && row.apprSeen == 1)
                            return `<div class="d-flex justify-content-center p-2"><span class="label label-lg label-light-warning label-inline">Rejected</span></div>`;
                        else {

                            var html = `<a  guid='` + data + `' id="btnFetchUser" class="btn btn-light btn-icon btn-hover-primary btn-sm">
                                                <i class="fas fa-pen text-primary"></i>
                                            </a>
                                            <a  guid='` + data + `' id="btnChangePassword" class="btn btn-light btn-icon btn-hover-warning btn-sm">
                                                    <i class="fas fa-lock text-warning"></i>
                                            </a>
                                            <a  guid='` + data + `' id="btnDeleteUser" class="btn btn-light btn-icon btn-hover-danger btn-sm">
                                                <i class="far fa-trash-alt text-danger"></i>
                                            </a>`;
                            return html;
                        }
                    }
                },],
        });
        datatable.on('order.dt search.dt', function () {
            let i = 1;

            datatable.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
                this.data("<span><b>" + (i++) + "</b></span>");
            });
        }).draw();
    }

    $(document).ready(function () {

        generateTable();
    });

    $(document).on('click', '#btnFetchUser', function () {

        let id = $(this).attr("guid");
        window.location.href = '/Users/UserMaster?Source=' + Guid + '&Id=' + id + '';
    });
    $(document).on('click', '#btnChangePassword', function () {

        let id = $(this).attr("guid");
        window.location.href = '/Users/ChangePassword?Source=' + Guid + '&Id=' + id + '';
    });
    $(document).on('click', '#btnDeleteUser', function () {
        let id = $(this).attr("guid");
        $(this).attr('disabled', true);
        Swal.fire({
            title: 'Are you sure?',
            text: "Do you want you delete this User ?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes'
        }).then((result) => {
            if (result.isConfirmed) {
                Delete(id);

            }
            else
                $(this).attr('disabled', false);
        })




    });

    function Delete(id) {

        return $.ajax({
            url: '/Users/Delete',
            dataType: 'json',
            data: { Id: id },
            type: 'Post',
            success: function (result) {

            },
            error: function (jqXhr, textStatus, errorMessage) {
                console.log(errorMessage);
            }

        }).done(function (result) {
            if (result.isDeleted) {

                toastr.success(result.message);

                datatable.ajax.reload();

            }
            if (result.isError) {
                toastr.error(result.message);
                $('#BtnDelete').removeClass('kt-spinner kt-spinner--right kt-spinner--md kt-spinner--light');
                $('#BtnDelete').attr('disabled', false);

            }
        });
    }



</script>





