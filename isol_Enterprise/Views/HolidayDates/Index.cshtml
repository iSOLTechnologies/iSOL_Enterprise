</div>
<script src="~/js/commonindex.js"></script>
<script>
    var rowdata;
    var Guid = $('#PageGuid').val();

    $(document).on('click', '#btnAdd', function () {


        window.location.href = '/HolidayDates/HolidayDatesMaster?Source=' + Guid;
    })


    var datatable;
    function generateTable() {

        datatable = $('#AttTable').DataTable({
            responsive: true,
            searching: true,
            ordering: false,
            // order: [[2, 'asc']],
            ordering: false,
            "ajax": {

                url: '/HolidayDates/GetData',
                async: false,
            },

            layout: {
                scroll: false, // enable/disable datatable scroll both horizontal and vertical when needed.
                // height: 450, // datatable's body's fixed height
                footer: false, // display/hide footer
            },

            // column sorting
            sortable: true,

            pagination: true,
            destroy: true,
            //   async: false,
            search: {
                input: $('#generalSearch'),
            },
            columns: [

                {
                    data: 'hldCode', title: '#',

                }, {
                    data: 'hldCode', title: 'Holiday Code'

                }, {
                    data: "wndFrm", 'title': 'Weekend From', render: function (data, type, row) {

                        return `<span class="text-center" >` + data + ` - ` + row.wndTo + `</span>`;
                        
                    }

                }, {
                        data: 'isCurYear', title: 'Valid For One Year', render: function (data, type, row) {

                            var html = `<div class="d-flex justify-content-center">`;
                            if(data === "Y")
                            html = html + `<span class="label label-lg label-light-primary label-inline" style="border-radius:0.7rem"> Yes </span>`;
                            else
                            html = html + `<span class="label label-lg label-light-warning label-inline" style="border-radius:0.7rem"> No </span>`;
                            return html + `</div>`;
                    },
                    width : '100px'

                }, {
                        data: 'weekNoRule', title: 'First Week Starts', render: function (data, type, row) {

                        if (data === "J")
                            return `<span class="label label-lg label-light-success label-inline" style="border-radius:0.7rem"> On January 1st </span>`;
                        else if (data === "D")
                            return `<span class="label label-lg label-light-warning label-inline" style="border-radius:0.7rem">In 1st 4 day Week </span>`;
                        else if (data === "F")
                            return `<span class="label label-lg label-light-info label-inline" style="border-radius:0.7rem">In 1st full Week </span>`;

                    }

                },                
                {
                    data: "hldCode", 'title': 'Action', render: function (data, type, row) {

                            var DelBtn = "", html = "";
                            

                                DelBtn = `<a guid=` + data + ` id="btnDelGLAccount" class="btn btn-icon btn-light btn-hover-danger btn-sm mx-3 btnDelete">
