<script src="~/js/commonmethods.js"></script>
<script>
    $(document).ready(function () {

        
        let Guid = $('#Guid').val();
        if (Guid != null && Guid != '' && Guid != undefined) {
            $("#btnSaveData").html('<i class="ki ki-check icon-sm"></i> Update');
            $("#btnSaveData").attr('disabled', true);

            GetUserData();
        }

        


        //$.getJSON('https://api.db-ip.com/v2/free/self', function (data) {
        //    console.log(JSON.stringify(data));
        //});
    });

    $(document).on("keydown", "input", function () {
        $(this).removeClass('is-invalid');


    });

    $(document).on('click', '#btnSaveData', function (e) {

        $(this).addClass('kt-spinner kt-spinner--right kt-spinner--md kt-spinner--light');
        $(this).attr('disabled', true);

        if (ValidateData("HeaderForm")) 
        {
            console.log("Form Valid");
                FormData();            
        }
        else {
            console.log("Form Valid not");
            $(this).removeClass('kt-spinner kt-spinner--right kt-spinner--md kt-spinner--light');
            $(this).attr('disabled', false);
        }
    });
    function FormData() {
        
        var formdata = getJsonObj("HeaderForm");
        
       
        PostData(formdata);


    }

    function PostData(formData) 
    {
      
        let Guid = $('#Guid').val();
        let URL = '/Users/Add';
        if (Guid != null && Guid != '' && Guid != undefined) {
            URL = '/Users/Edit';
        }
        
        return $.ajax({
            url: URL,
            dataType: 'json',
            type: 'POST',

            data:  formData ,

            success: function (result) {
                console.log(result);
                if (result.isInserted) {
                    toastr.success(result.message);

                    setTimeout(
                        function () {

                            $('#btnSaveData').removeClass('kt-spinner kt-spinner--right kt-spinner--md kt-spinner--light');
                            $('#btnSaveData').attr('disabled', false);

                        }, 800);
                    setTimeout(function () {
                        window.history.back();
                    }, 800);


                }

                if (!(result.isInserted)) {
                    toastr.error(result.message);
                    $('#btnSaveData').removeClass('kt-spinner kt-spinner--right kt-spinner--md kt-spinner--light');
                    $('#btnSaveData').attr('disabled', false);

                }

            },
            error: function (jqXhr, textStatus, errorMessage) {
                console.log(errorMessage);
            }

        }).done(function (result) {

        });
    }

    $(document).on('click', '#ShowPassword', function () {

        var asd = $('#ShowPassword').attr('rl');
        if ($('#ShowPassword').attr('rl') == 'hide') {

            $('#ShowPassword').attr('rl', 'show');
            $('#Password').attr('type', 'text');
            $('#passwordEye').removeClass('fa-eye-slash');
            $('#passwordEye').addClass('fa-eye');
        }
        else {
            $('#ShowPassword').attr('rl', 'hide');
            $('#Password').attr('type', 'Password');
            $('#passwordEye').addClass('fa-eye-slash');
            $('#passwordEye').removeClass('fa-eye');
        }

    })

    

    

    function GetUserData() {

        return $.ajax({
            url: '/Users/GetData',
            dataType: 'json',
            data: { id: $('#Guid').val() },
            type: 'Post',
            success: function (result) {

            },
            error: function (jqXhr, textStatus, errorMessage) {
                console.log(errorMessage);
            }


        }).done(function (result) {
            result = result.data;
            
            populateUserData(result)
        });
    }

    function populateUserData(data) {

        //RecordLogs('Users', 'View User');

        $('#Email').attr('disabled', true);

        $('#FirstName').val(data.firstName);
        $('#LastName').val(data.lastName);
        $('#ContactNumber').val(data.contactNumber);

        $('#RoleCode').val(data.roleCode);
        $('#Email').val(data.email);
        $("#pass-cont").addClass("d-none");
        $("#Password").addClass("NotReq");
       
        $('#IsActive').prop('checked',data.isActive);
        $("#btnSaveData").attr('disabled', false);
    }

    function ClearForm() {

        $('#FirstName').val('');
        $('#LastName').val('');
        $('#UContactNumber').val('');
        $('#RoleCode').val('');
        $('#Email').val('');
        $('#Password').val('');
        $('#USuperiorCode').val('');
        $('#URegionCode').val('');
        $('#IsActive').prop('checked', true);

        var str = '';
        $('#useridimage').css('background-image', 'url("/' + str + '")');
    }

    

    

    function UserFormData() {
        var myString;

        var PrfilePicBased64 = $('#useridimage').css('background-image');
        if (PrfilePicBased64 != null && PrfilePicBased64 != '' && PrfilePicBased64 != undefined) {

            myString = PrfilePicBased64.substr(PrfilePicBased64.indexOf("data:image") + 0);//remove all before `data:image`
            myString = myString.replace('")', '');
            myString = myString.replace(')', '');

        }

        var formdata = {

            UserPic: myString,
            Id: $('#Guid').val(),
            FirstName: $('#FirstName').val(),
            LastName: $('#LastName').val(),
            ContactNumber: $('#UContactNumber').val(),
            RoleCode: $('#RoleCode option:selected').val(),
            Email: $('#Email').val(),
            Username: $('#Username').val(),
            Password: $('#Password').val(),
            IsActive: $('#IsActive').prop('checked'),
            SuperiorId: $('#USuperiorCode option:selected').val(),
            RegionCode: $('#URegionCode option:selected').val(),
        }
        return formdata;
    }



</script>
