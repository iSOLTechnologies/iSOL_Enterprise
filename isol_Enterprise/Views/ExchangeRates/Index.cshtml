                    }
                },],
        });
        datatable.on('order.dt search.dt', function () {
            let i = 1;

            datatable.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
                this.data("<span><b>" + (i++) + "</b></span>");
            });
        }).draw();
    }


    $(document).ready(function () {

        $.when(generateTable()).done(function () {

            Guid.GetUserPageActivity();
        });
    });

    $(document).on('click', '#btnFetchExchRate', function () {

        let id = $(this).attr("guid");
        window.location.href = '/ExchangeRates/ExchangeRatesMaster?Source=' + Guid + '&Id=' + id + '';
    });
    $(document).on('change', '#YearF,#MonthF,#CurrF', function () {

        FilterTable();

    });

    function FilterTable() {

        let dateVal = $("#MonthF").val() + "-" + $("#YearF").val();
        let CurrVal = $("#CurrF").val();
        datatable.column(1).search(dateVal).draw();
        datatable.column(2).search(CurrVal).draw();
    }


</script>





