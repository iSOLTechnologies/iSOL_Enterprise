@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/assets/js/jquery-3.6.3.slim.js"></script>


<title> </title>

<input type="hidden" id="Id" name="Id" />

<input type="hidden" id="PageGuid" value="@Context.Request.Query["Source"]" />


<div class="container mt-5">

    <!--begin::Card-->
    <div class="card card-custom">
        <div class="card-header">
            <div class="card-title">
                <span class="card-icon">
                    <i class="flaticon-notepad text-primary"></i>
                </span>
                <h3 class="card-label">All Roles</h3>
            </div>

            <div class="card-toolbar">
                <div class="btn-group">
                    <button type="button" id="btnAdd" class="btn btn-primary font-weight-bolder">
                        + Add Record
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <!--begin: Datatable-->
            <table class="table table-striped- table-bordered table-hover table-checkable " id="AttTable">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>


                    </tr>
                </thead>
            </table>

            <!--end: Datatable-->
        </div>
    </div>

</div>
<script src="~/js/commonindex.js"></script>
<script>
    var rowdata;
    var Guid = $('#PageGuid').val();

    $(document).on('click', '#btnAdd', function () {


        window.location.href = '/ChartOfAccounts/ChartofAccountsMaster?Source=' + Guid;
    })


    var datatable;
    function generateTable() {

        datatable = $('#AttTable').DataTable({
            responsive: true,
            searching: true,
            ordering: false,
            // order: [[2, 'asc']],
            ordering: false,
            "ajax": {

                url: '/Role/GetALlRoles',
                async: false,
            },

            layout: {
                scroll: false, // enable/disable datatable scroll both horizontal and vertical when needed.
                // height: 450, // datatable's body's fixed height
                footer: false, // display/hide footer
            },

            // column sorting
            sortable: true,

            pagination: true,
            destroy: true,
            //   async: false,
            search: {
                input: $('#generalSearch'),
            },
            columns: [

                {
                    data: 'id', title: '#',

                }, {
                    data: 'roleName', title: 'RoleName'

                }, {
                    data: 'createdBy', title: 'CreatedBy'

                }, {
                    data: 'createdOn', title: 'CreatedOn', render: function (data, type, row) {
                        if (data != undefined && data != '') {

                            return moment(data).format('DD-MM-YYYY')

                        } else {
                            // return data;
                            return '';
                        }
                    }
                },
                {
                    data: "isActive", 'title': 'isActive', render: function (data, type, row) {


                        if (!data)
                            return `<span class="label label-md label-light-warning label-inline" style="border-radius:0.7rem">False</span>`;
                        else
                            return `<span class="label label-md label-light-success label-inline" style="border-radius:0.7rem">True</span>`;
                    }
                },
                {
                    data: "guid", 'title': 'Action', render: function (data, type, row) {


                        var html = `<a  guid='` + data + `' id="btnFetchRole" class="btn btn-light btn-icon btn-hover-primary btn-sm btnEdit">
                                                    <i class="fas fa-pen text-primary"></i>
                                                </a>

                                                <a  guid='` + data + `' id="btnDeleteRole" class="btn btn-light btn-icon btn-hover-danger btn-sm btnDelete">
                                                    <i class="far fa-trash-alt text-danger"></i>
                                                </a>`;
                        return html;

                    }
                },],
        });
        datatable.on('order.dt search.dt', function () {
            let i = 1;

            datatable.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
                this.data("<span><b>" + (i++) + "</b></span>");
            });
        }).draw();
    }

    $(document).ready(function () {

        $.when(generateTable()).done(function () {

            Guid.GetUserPageActivity();
        });
    });

    $(document).on('click', '#btnFetchRole', function () {

        let id = $(this).attr("guid");
        window.location.href = '/Role/RolesMaster?Source=' + Guid + '&Id=' + id + '';
    });

    $(document).on('click', '#btnDeleteRole', function () {
        let Guid = $(this).attr("guid");
        $(this).attr('disabled', true);
        Swal.fire({
            title: 'Are you sure?',
            text: "Do you want you delete this Role ?  Any User with this Role would still be functional !",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes'
        }).then((result) => {
            if (result.isConfirmed) {
                Delete(Guid);

            }
            else
                $(this).attr('disabled', false);
        })




    });

    function Delete(Guid) {

        return $.ajax({
            url: '/Role/Delete',
            dataType: 'json',
            data: { Guid: Guid },
            type: 'Post',
            success: function (result) {

            },
            error: function (jqXhr, textStatus, errorMessage) {
                console.log(errorMessage);
            }

        }).done(function (result) {
            if (result.isDeleted) {

                toastr.success(result.message);

                datatable.ajax.reload();

            }
            if (result.isError) {
                toastr.error(result.message);
                $('#BtnDelete').removeClass('kt-spinner kt-spinner--right kt-spinner--md kt-spinner--light');
                $('#BtnDelete').attr('disabled', false);

            }
        });
    }



</script>





