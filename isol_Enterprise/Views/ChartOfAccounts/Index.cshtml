<script src="~/js/commonindex.js"></script>
<script>
    var rowdata;
    var Guid = $('#PageGuid').val();

    $(document).on('click', '#btnAdd', function () {


        window.location.href = '/ChartOfAccounts/ChartofAccountsMaster?Source=' + Guid;
    })


    var datatable;
    function generateTable() {

        datatable = $('#AttTable').DataTable({
            responsive: true,
            searching: true,
            ordering: false,
            // order: [[2, 'asc']],
            ordering: false,
            "ajax": {

                url: '/ChartOfAccounts/GetChartOfAccounts',
                async: false,
            },

            layout: {
                scroll: false, // enable/disable datatable scroll both horizontal and vertical when needed.
                // height: 450, // datatable's body's fixed height
                footer: false, // display/hide footer
            },

            // column sorting
            sortable: true,

            pagination: true,
            destroy: true,
            //   async: false,
            search: {
                input: $('#generalSearch'),
            },
            columns: [

                {
                    data: 'docEntry', title: '#',

                }, {
                    data: 'acctCode', title: 'Account Code'

                }, {
                    data: 'acctName', title: 'Account Name'

                },{
                    data: 'fatherNum', title: 'Parent Code'

                }, {
                    data: 'actCurr', title: 'Currency'

                }, 
                {
                    data: "levels", 'title': 'Level', render: function (data, type, row) {


                        if (data <= 3)
                            return `<span class="label label-md label-light-warning label-inline" style="border-radius:0.7rem">`+data+`</span>`;
                        else if(data >= 4 && data <= 7)
                            return `<span class="label label-md label-light-success label-inline" style="border-radius:0.7rem">` + data + `</span>`;
                        else
                            return `<span class="label label-md label-light-info label-inline" style="border-radius:0.7rem">` + data + `</span>`;
                    }
                },
                {
                    data: "docEntry", 'title': 'Action', render: function (data, type, row) {


                        if (row.isApproved == 0 && row.apprSeen == 0)
                            return `<div class="d-flex justify-content-center p-2"><span class="label label-lg label-light-success label-inline">Pending</span></div>`;
                        else if (row.isApproved == 0 && row.apprSeen == 1)
                            return `<div class="d-flex justify-content-center p-2"><span class="label label-lg label-light-warning label-inline">Rejected</span></div>`;
                        else 
                        {

                            var html = '<a guid=' + data + ' id="btnFetchGLAccount" class="btn btn-icon btn-light btn-hover-primary btn-sm mx-3 btnEdit">';
                            html += '<span class="svg-icon svg-icon-primary svg-icon-2x"><!--begin::Svg Icon | path:C:\wamp64\www\keenthemes\themes\metronic\theme\html\demo2\dist/../src/media/svg/icons\Communication\Write.svg--><svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">';
                            html += '    <g stroke = "none" stroke - width="1" fill = "none" fill - rule="evenodd" >';
                            html += '       <rect x="0" y="0" width="24" height="24" />';
                            html += '      <path d="M12.2674799,18.2323597 L12.0084872,5.45852451 C12.0004303,5.06114792 12.1504154,4.6768183 12.4255037,4.38993949 L15.0030167,1.70195304 L17.5910752,4.40093695 C17.8599071,4.6812911 18.0095067,5.05499603 18.0083938,5.44341307 L17.9718262,18.2062508 C17.9694575,19.0329966 17.2985816,19.701953 16.4718324,19.701953 L13.7671717,19.701953 C12.9505952,19.701953 12.2840328,19.0487684 12.2674799,18.2323597 Z" fill="#000000" fill-rule="nonzero" transform="translate(14.701953, 10.701953) rotate(-135.000000) translate(-14.701953, -10.701953) " />';
                            html += '      <path d="M12.9,2 C13.4522847,2 13.9,2.44771525 13.9,3 C13.9,3.55228475 13.4522847,4 12.9,4 L6,4 C4.8954305,4 4,4.8954305 4,6 L4,18 C4,19.1045695 4.8954305,20 6,20 L18,20 C19.1045695,20 20,19.1045695 20,18 L20,13 C20,12.4477153 20.4477153,12 21,12 C21.5522847,12 22,12.4477153 22,13 L22,18 C22,20.209139 20.209139,22 18,22 L6,22 C3.790861,22 2,20.209139 2,18 L2,6 C2,3.790861 3.790861,2 6,2 L12.9,2 Z" fill="#000000" fill-rule="nonzero" opacity="0.3" />';
                            html += '   </g>';
                            html += '</svg><!--end:: Svg Icon--></span> ';
                            html += '               </a>';
                            return html;
                        }

                    }
                },],
        });
        datatable.on('order.dt search.dt', function () {
            let i = 1;

            datatable.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
                this.data("<span><b>" + (i++) + "</b></span>");
            });
        }).draw();
    }

    $(document).ready(function () {

        $.when(generateTable()).done(function () {

            Guid.GetUserPageActivity();
        });
    });

    $(document).on('click', '#btnFetchGLAccount', function () {

        let id = $(this).attr("guid");
        window.location.href = '/ChartOfAccounts/ChartOfAccountsMaster?Source=' + Guid + '&Id=' + id + '';
    });

    $(document).on('click', '#btnDeleteRole', function () {
        let Guid = $(this).attr("guid");
        $(this).attr('disabled', true);
        Swal.fire({
            title: 'Are you sure?',
            text: "Do you want you delete this Role ?  Any User with this Role would still be functional !",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes'
        }).then((result) => {
            if (result.isConfirmed) {
                Delete(Guid);

            }
            else
                $(this).attr('disabled', false);
        })




    });

    function Delete(Guid) {

        return $.ajax({
            url: '/Role/Delete',
            dataType: 'json',
            data: { Guid: Guid },
            type: 'Post',
            success: function (result) {

            },
            error: function (jqXhr, textStatus, errorMessage) {
                console.log(errorMessage);
            }

        }).done(function (result) {
            if (result.isDeleted) {

                toastr.success(result.message);

                datatable.ajax.reload();

            }
            if (result.isError) {
                toastr.error(result.message);
                $('#BtnDelete').removeClass('kt-spinner kt-spinner--right kt-spinner--md kt-spinner--light');
                $('#BtnDelete').attr('disabled', false);

            }
        });
    }



</script>





